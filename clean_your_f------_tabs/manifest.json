{
  "manifest_version": 3,
  "name": "Smart Tab Organizer with GPT",
  "version": "1.0",
  "permissions": [
    "tabs",
    "tabGroups",
    "activeTab",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "content_security_policy": {
    "script-src": "'self' https://api.openai.com; object-src 'self'"
  }
}
